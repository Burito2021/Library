{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "limit": 100,
        "name": "Annotations & Alerts",
        "showIn": 0,
        "type": "dashboard"
      }
    ]
  },
  "description": "Simplified JVM Dashboard for Library REST API",
  "editable": true,
  "id": null,
  "links": [],
  "refresh": "30s",
  "rows": [
    {
      "collapse": false,
      "height": "100px",
      "panels": [
        {
          "colorBackground": false,
          "colorValue": true,
          "colors": [
            "rgba(245, 54, 54, 0.9)",
            "rgba(237, 129, 40, 0.89)",
            "rgba(50, 172, 45, 0.97)"
          ],
          "datasource": "Prometheus",
          "format": "s",
          "id": 1,
          "span": 4,
          "targets": [
            {
              "expr": "process_uptime_seconds",
              "legendFormat": "",
              "refId": "A"
            }
          ],
          "title": "Uptime",
          "type": "singlestat",
          "valueName": "current"
        },
        {
          "colorBackground": false,
          "colorValue": true,
          "colors": [
            "rgba(50, 172, 45, 0.97)",
            "rgba(237, 129, 40, 0.89)",
            "rgba(245, 54, 54, 0.9)"
          ],
          "datasource": "Prometheus",
          "format": "percent",
          "id": 2,
          "span": 4,
          "targets": [
            {
              "expr": "sum(jvm_memory_used_bytes{area=\"heap\"})*100/sum(jvm_memory_max_bytes{area=\"heap\"})",
              "legendFormat": "",
              "refId": "A"
            }
          ],
          "thresholds": "70,90",
          "title": "Heap Usage",
          "type": "singlestat",
          "valueName": "current"
        },
        {
          "colorBackground": false,
          "colorValue": true,
          "colors": [
            "rgba(50, 172, 45, 0.97)",
            "rgba(237, 129, 40, 0.89)",
            "rgba(245, 54, 54, 0.9)"
          ],
          "datasource": "Prometheus",
          "format": "percentunit",
          "id": 3,
          "span": 4,
          "targets": [
            {
              "expr": "process_cpu_usage",
              "legendFormat": "",
              "refId": "A"
            }
          ],
          "thresholds": "0.7,0.9",
          "title": "CPU Usage",
          "type": "singlestat",
          "valueName": "current"
        }
      ],
      "showTitle": true,
      "title": "Overview",
      "titleSize": "h6"
    },
    {
      "collapse": false,
      "height": 250,
      "panels": [
        {
          "datasource": "Prometheus",
          "fill": 1,
          "id": 4,
          "legend": {
            "show": true
          },
          "lines": true,
          "span": 6,
          "targets": [
            {
              "expr": "sum(rate(http_server_requests_seconds_count[1m]))",
              "legendFormat": "Requests/sec",
              "refId": "A"
            }
          ],
          "title": "HTTP Request Rate",
          "type": "graph",
          "yAxes": [
            {
              "format": "ops",
              "min": 0
            }
          ]
        },
        {
          "datasource": "Prometheus",
          "fill": 1,
          "id": 5,
          "legend": {
            "show": true
          },
          "lines": true,
          "span": 6,
          "targets": [
            {
              "expr": "sum(rate(http_server_requests_seconds_sum[1m]))/sum(rate(http_server_requests_seconds_count[1m]))",
              "legendFormat": "Avg Response Time",
              "refId": "A"
            }
          ],
          "title": "HTTP Response Time",
          "type": "graph",
          "yAxes": [
            {
              "format": "s",
              "min": 0
            }
          ]
        }
      ],
      "showTitle": true,
      "title": "HTTP Metrics",
      "titleSize": "h6"
    },
    {
      "collapse": false,
      "height": 250,
      "panels": [
        {
          "datasource": "Prometheus",
          "fill": 1,
          "id": 6,
          "legend": {
            "show": true
          },
          "lines": true,
          "span": 6,
          "targets": [
            {
              "expr": "sum(jvm_memory_used_bytes{area=\"heap\"})",
              "legendFormat": "Heap Used",
              "refId": "A"
            },
            {
              "expr": "sum(jvm_memory_max_bytes{area=\"heap\"})",
              "legendFormat": "Heap Max",
              "refId": "B"
            }
          ],
          "title": "JVM Heap Memory",
          "type": "graph",
          "yAxes": [
            {
              "format": "bytes",
              "min": 0
            }
          ]
        },
        {
          "datasource": "Prometheus",
          "fill": 1,
          "id": 7,
          "legend": {
            "show": true
          },
          "lines": true,
          "span": 6,
          "targets": [
            {
              "expr": "jvm_threads_live_threads",
              "legendFormat": "Live Threads",
              "refId": "A"
            }
          ],
          "title": "JVM Threads",
          "type": "graph",
          "yAxes": [
            {
              "format": "short",
              "min": 0
            }
          ]
        }
      ],
      "showTitle": true,
      "title": "JVM Metrics",
      "titleSize": "h6"
    }
  ],
